{
    "db_name": "ZeroNetDevCenter",
    "db_file": "zeromedium.db",
    "version": 3,
    "maps": {
        "data/topics.json": {
            "to_table": ["topics"]
        },
        "data/users/.+/data.json": {
            "to_table": ["stories", "responses", "claps", "images"],
            "to_keyvalue": [ "next_story_id", "next_response_id", "next_clap_id", "name", "about", "interests" ]
        },
        "data/users/.+/content.json": {
            "to_json_table": ["cert_user_id"],
            "file_name": "data.json"
        },
        "merged-ZeroGraph/.+/data/users/.+/content.json": {
            "to_json_table": ["cert_user_id"]
        },
        "merged-ZeroGraph/.+/data/users/.+/data.json": {
            "to_table": [ "objects" ]
        }
    },
    "tables": {
        "json": {
            "cols": [
                ["json_id", "INTEGER PRIMARY KEY AUTOINCREMENT"],
                ["site", "TEXT"],
                ["directory", "TEXT"],
                ["file_name", "TEXT"],
                ["cert_user_id", "TEXT"]
            ],
            "indexes": ["CREATE UNIQUE INDEX path ON json(directory, file_name)"],
            "schema_changed": 12
        },
        "topics": {
            "cols": [
                ["topic_id", "INTEGER PRIMARY KEY"],
                ["name", "TEXT"],
                ["slug", "TEXT"],
                ["tags", "TEXT"],
                ["json_id", "INTEGER REFERENCES json (json_id)"]
            ],
            "indexes": ["CREATE UNIQUE INDEX tag_key ON topics (json_id, topic_id)"],
            "schema_changed": 13
        },
        "stories": {
            "cols": [
                ["story_id", "INTEGER"],
                ["title", "TEXT"],
                ["slug", "TEXT"],
                ["description", "TEXT"],
                ["body", "TEXT"],
                ["tags", "TEXT"],
                ["date_updated", "INTEGER"],
                ["date_added", "INTEGER"],
                ["json_id", "INTEGER REFERENCES json (json_id)"]
            ],
            "indexes": ["CREATE UNIQUE INDEX story_key ON stories (json_id, story_id)"],
            "schema_changed": 15
        },
        "responses": {
            "cols": [
                ["response_id", "INTEGER"],
                ["body", "TEXT"],
                ["reference_id", "INTEGER"],
                ["reference_auth_address", "TEXT"],
                ["reference_type", "TEXT"],
                ["date_updated", "INTEGER"],
                ["date_added", "INTEGER"],
                ["json_id", "INTEGER REFERENCES json (json_id)"]
            ],
            "indexes": ["CREATE UNIQUE INDEX response_key ON responses (json_id, response_id)"],
            "schema_changed": 11
        },
        "claps": {
            "cols": [
                ["clap_id", "INTEGER"],
                ["number", "INTEGER"],
                ["reference_id", "INTEGER"],
                ["reference_auth_address", "TEXT"],
                ["reference_type", "TEXT"],
                ["date_updated", "INTEGER"],
                ["date_added", "INTEGER"],
                ["json_id", "INTEGER REFERENCES json (json_id)"]
            ],
            "indexes": ["CREATE UNIQUE INDEX clap_key ON claps (json_id, clap_id)"],
            "schema_changed": 11
        },
        "images": {
            "cols": [
                ["image_id", "INTEGER PRIMARY KEY AUTOINCREMENT"],
                ["file_name", "TEXT"],
                ["date_added", "INTEGER"],
                ["json_id", "INTEGER REFERENCES json (json_id)"]
            ],
            "indexes": ["CREATE UNIQUE INDEX image_key ON images (json_id, image_id)"],
            "schema_changed": 1
        },
        "objects": {
            "cols": [
                ["title", "text"],
                ["type", "text"],
                ["url", "text"],
                ["description", "text"],
                ["zite_name", "text"],
                ["locale", "text"],
                ["date_added", "integer"],
                ["json_id", "integer references json(json_id)"]
            ],
            "indexes": [
                "CREATE UNIQUE INDEX post_id ON objects(json_id, date_added)"
            ],
            "schema_changed": 3
        }
    }
}
