{
    "db_name": "ZeroNetDevCenter",
    "db_file": "data/zeromedium.db",
    "version": 2,
    "maps": {
        "topics.json": {
            "to_table": ["topics", "topics_es", "topics_zh"]
        },
        "users/.+/data.json": {
            "to_table": ["stories", "responses", "claps", "files"],
            "to_keyvalue": [ "next_story_id", "next_response_id", "next_clap_id", "name", "about", "interests", "languages" ]
        },
        "users/.+/content.json": {
            "to_json_table": ["cert_user_id"],
            "file_name": "data.json"
        }
    },
    "tables": {
        "json": {
            "cols": [
                ["json_id", "INTEGER PRIMARY KEY AUTOINCREMENT"],
                ["directory", "TEXT"],
                ["file_name", "TEXT"],
                ["cert_user_id", "TEXT"]
            ],
            "indexes": ["CREATE UNIQUE INDEX path ON json(directory, file_name)"],
            "schema_changed": 12
        },
        "topics": {
            "cols": [
                ["topic_id", "INTEGER PRIMARY KEY"],
                ["name", "TEXT"],
                ["slug", "TEXT"],
                ["tags", "TEXT"],
                ["json_id", "INTEGER REFERENCES json (json_id)"]
            ],
            "indexes": ["CREATE UNIQUE INDEX tag_key ON topics (json_id, topic_id)"],
            "schema_changed": 14
        },
        "topics_es": {
            "cols": [
                ["topic_id", "INTEGER PRIMARY KEY"],
                ["name", "TEXT"],
                ["slug", "TEXT"],
                ["tags", "TEXT"],
                ["json_id", "INTEGER REFERENCES json (json_id)"]
            ],
            "indexes": ["CREATE UNIQUE INDEX tag_es_key ON topics_es (json_id, topic_id)"],
            "schema_changed": 14
        },
        "topics_zh": {
            "cols": [
                ["topic_id", "INTEGER PRIMARY KEY"],
                ["name", "TEXT"],
                ["slug", "TEXT"],
                ["tags", "TEXT"],
                ["json_id", "INTEGER REFERENCES json (json_id)"]
            ],
            "indexes": ["CREATE UNIQUE INDEX tag_zh_key ON topics_zh (json_id, topic_id)"],
            "schema_changed": 14
        },
        "stories": {
            "cols": [
                ["story_id", "INTEGER"],
                ["title", "TEXT"],
                ["slug", "TEXT"],
                ["description", "TEXT"],
                ["body", "TEXT"],
                ["tags", "TEXT"],
				["language", "TEXT"],
                ["date_updated", "INTEGER"],
                ["date_added", "INTEGER"],
                ["json_id", "INTEGER REFERENCES json (json_id)"]
            ],
            "indexes": ["CREATE UNIQUE INDEX story_key ON stories (json_id, story_id)"],
            "schema_changed": 17
        },
        "responses": {
            "cols": [
                ["response_id", "INTEGER"],
                ["body", "TEXT"],
                ["reference_id", "INTEGER"],
                ["reference_auth_address", "TEXT"],
                ["reference_type", "TEXT"],
                ["date_updated", "INTEGER"],
                ["date_added", "INTEGER"],
                ["json_id", "INTEGER REFERENCES json (json_id)"]
            ],
            "indexes": ["CREATE UNIQUE INDEX response_key ON responses (json_id, response_id)"],
            "schema_changed": 11
        },
        "claps": {
            "cols": [
                ["clap_id", "INTEGER"],
                ["number", "INTEGER"],
                ["reference_id", "INTEGER"],
                ["reference_auth_address", "TEXT"],
                ["reference_type", "TEXT"],
                ["date_updated", "INTEGER"],
                ["date_added", "INTEGER"],
                ["json_id", "INTEGER REFERENCES json (json_id)"]
            ],
            "indexes": ["CREATE UNIQUE INDEX clap_key ON claps (json_id, clap_id)"],
            "schema_changed": 11
        },
        "files": {
            "cols": [
                ["image_id", "INTEGER PRIMARY KEY AUTOINCREMENT"],
                ["file_name", "TEXT"],
                ["file_type", "TEXT"],
                ["date_added", "INTEGER"],
                ["json_id", "INTEGER REFERENCES json (json_id)"]
            ],
            "indexes": ["CREATE UNIQUE INDEX file_key ON files (json_id, image_id)"],
            "schema_changed": 2
        }
    }
}
